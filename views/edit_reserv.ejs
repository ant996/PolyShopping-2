<%- include _layouts/header %>

<h2 class="page-title">Reserver</h2>
<br>


<form method="post" action="/admin/reserv/edit-reserv/<%= id %>" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <div class="form-group" >
        <input type="hidden"  class="form-control" name="price" value="<%= price %>" placeholder="Price">
    </div>
        
    
    <div class="row">
        <div class="form-group">
            <label for="">Disponibilit√©</label>
            <select name="reserv" class="form-control">
                <% reservation.forEach(function(res){ %>
                    <option value="<%= res.title %>"
                    <% if (res.title == reserv) { %>
                    selected="selected"
                    <% } %>        
                    ><%= res.title %></option>
                <% }); %>
            </select>
            <br><br>
            <button class="btn btn-default">Valider</button>
        </div>
 
        <div class="col-xs-12 col-md-5">
            <img class="spi" src="/product_images/<%= id %>/<%= image %>" alt="">
            <br>
        </div>
    </div>
    <div class="form-group">
        <textarea name="desc" class="form-control" placeholder="Description" cols="30" rows="10" hidden="hidden" style="visibility:hidden;"><%= desc %></textarea>
    </div>
    
    <div class="form-group">
        <select name="category" class="form-control" style="visibility:hidden;">
            <% categories.forEach(function(cat){ %>
                <option value="<%= cat.slug %>"
                <% if (cat.slug == category) { %>
                selected="selected"
                <% } %>        
                ><%= cat.title %></option>
            <% }); %>
        </select>
    </div>
</form>

<%- include _layouts/footer %>