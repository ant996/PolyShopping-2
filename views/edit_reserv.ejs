<%- include _layouts/header %>

<h2 class="page-title">Reserver</h2>
<br>


<form method="post" action="/admin/reserv/edit-reserv/<%= id %>" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Titre</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
      
    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Description"><%= desc %></textarea>
    </div>
    
    <div class="form-group">
        <label for="">Categorie</label>
        <select name="category" class="form-control">
            <% categories.forEach(function(cat){ %>
                <option value="<%= cat.slug %>"
                <% if (cat.slug == category) { %>
                selected="selected"
                <% } %>        
                ><%= cat.title %></option>
            <% }); %>
        </select>
    </div>
    
    <div class="form-group">
        <label for="">Prix</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
    </div>
    
    
    
    <div class="row">
        <div class="form-group">
            <label for="">Disponibilité</label>
            <select name="reserv" class="form-control">
                <% reservation.forEach(function(res){ %>
                    <option value="<%= res.title %>"
                    <% if (res.title == reserv) { %>
                    selected="selected"
                    <% } %>        
                    ><%= res.title %></option>
                <% }); %>
            </select>
            <br><br>
            <button class="btn btn-default">Valider</button>
        </div>
 
        <h1 class="page-header"><%= title %></h1>
    
        <div class="col-xs-12 col-md-5">
            <img class="spi" src="/product_images/<%= id %>/<%= image %>" alt="">
            <br>
        </div>
        <div class="col-xs-12 col-md-7">
            <p><%= desc %></p>
            <p><%= parseFloat(price).toFixed(2) %> €</p>

        </div>
    </div>
</form>

<%- include _layouts/footer %>