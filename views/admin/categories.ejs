<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Catégories</h2>
<a href="/admin/categories/add-category" class="btn btn-primary">Ajouter une nouvelle catégorie</a>
<br><br>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Catégories</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        
        <% categories.forEach(function(cat){ %>
        <tr>
            <td><%= cat.title %></td>
            <td><a href="/admin/categories/edit-category/<%= cat._id %>">Modifier</a></td>
            <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cat._id %>">Supprimer</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../_layouts/adminfooter') %>