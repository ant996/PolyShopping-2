<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Ajouter une catégorie</h2>
<a href="/admin/categories" class="btn btn-primary">Retour sur toutes les catégories</a>
<br><br>

<form method="post" action="/admin/categories/edit-category/<%= id %>">
    
    <div class="form-group">
        <label for="">Nom</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <button class="btn btn-default">Publier</button>
</form>

